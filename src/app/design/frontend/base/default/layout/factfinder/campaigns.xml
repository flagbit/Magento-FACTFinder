<layout>

    <catalogsearch_result_index>
        <reference name="content">
            <block type="factfinder_campaigns/search_feedback" before="search.result" name="factfinder.campaign.feedback" template="factfinder/campaigns/search/feedback.phtml">
                <action method="setTextNumber">
                    <number>1</number>
                </action>
            </block>
            <block type="factfinder_campaigns/search_advisory" after="factfinder.campaign.feedback" name="factfinder.campaign.advisory" template="factfinder/campaigns/search/advisory.phtml"/>
        </reference>
    </catalogsearch_result_index>

    <catalog_product_view>
        <reference name="content">
            <block type="factfinder_campaigns/product_feedback" before="product.info" name="factfinder.campaign.feedback" template="factfinder/campaigns/product/feedback.phtml"/>
        </reference>
    </catalog_product_view>

    <checkout_cart_index>
        <reference name="checkout.cart">
            <action method="setTemplate"><template>factfinder/campaigns/cart.phtml</template></action>
            <block type="factfinder_campaigns/cart_pushed" name="ff.pushed.products" as="pushed_products" template="factfinder/campaigns/cart/pushed.phtml">
                <block type="factfinder_campaigns/cart_feedback" before="crosssell" name="ff.feedback.above.pushed" as="feedback_above">
                    <action method="setLabel"><label>above pushed product</label></action>
                </block>
                <block type="factfinder_campaigns/cart_feedback" after="crosssell" name="ff.feedback.below.pushed" as="feedback_below">
                    <action method="setLabel"><label>below pushed product</label></action>
                </block>
            </block>
        </reference>
    </checkout_cart_index>

</layout>